<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/memo_dialog_geopkt_edittext3_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/memo_dialog_geopkt_name" >

        <requestFocus />
    </EditText>

    <TextView
        style="@style/Style_WrapContent"
        android:text="@string/memo_dialog_latitude" />

    <EditText
        android:id="@+id/memo_dialog_geopkt_edittext1_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/memo_dialog_geopkt_edittext1_text" >
    </EditText>

    <TextView
        style="@style/Style_WrapContent"
        android:text="@string/memo_dialog_longitude" />

    <EditText
        android:id="@+id/memo_dialog_geopkt_edittext2_lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="@string/memo_dialog_geopkt_edittext2_text" >
    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/memo_dialog_geopkt_button1"
            style="@style/Style_WrapContent"
            android:layout_weight="0.5"
            android:text="@string/memo_dialog_geopkt_button1_text" />

        <Button
            android:id="@+id/memo_dialog_geopkt_button2"
            style="@style/Style_WrapContent"
            android:layout_weight="0.5"
            android:text="@string/memo_dialog_geopkt_button2_text" />
    </LinearLayout>

</LinearLayout> <!-- <LinearLayout -->
