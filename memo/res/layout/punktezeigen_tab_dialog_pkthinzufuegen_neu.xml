<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText1_text" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText2_text" />

        <CheckBox
            android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_checkBox1_text" />

        <EditText
            android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText3_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_textView1_text" />

        <RadioGroup
            android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_radio0_text" />

            <RadioButton
                android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_radio1_text" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_textView2_text" />

            <EditText
                android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number|numberDecimal"
                android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_editText4_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_button1_text" />

            <Button
                android:id="@+id/punktezeigen_tab_dialog_pkthinzufuegen_neu_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/punktezeigen_tab_dialog_pkthinzufuegen_neu_button2_text" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>